{
    "name": "o11y-sample-node-server",
    "description": "Sample server endpoint that consume 'o11y' payloads",
    "version": "250.2.0",
    "dependencies": {
        "cors": "2.8.5",
        "express": "4.17.3",
        "helmet": "5.0.2",
        "o11y": "250.12.0",
        "o11y_schema": "252.54.0"
    },
    "engines": {
        "node": "18.x",
        "npm": ">=7.4.3",
        "yarn": "~1.22.19"
    },
    "volta": {
        "node": "18.17.1",
        "yarn": "1.22.19",
        "npm": "8.19.3"
    },
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "scripts": {
        "init": "cp ../_common/generated/o11y_schema.d.ts ./src/typings",
        "build": "tsc -b && cp package.json ../../dist-server",
        "clean": "rimraf ../../dist-server",
        "lint": "eslint ./src/**/*.ts",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "start": "node --es-module-specifier-resolution=node ../../dist-server/server/src/api.js",
        "start:withweb": "O11Y_SERVE_WEB=true yarn start",
        "watch": "nodemon",
        "watch:withweb": "O11Y_SERVE_WEB=true yarn watch"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/estree": "0.0.50",
        "@types/express": "^4.17.13",
        "eslint": "^7.32.0",
        "lint-staged": "^10.5.3",
        "nodemon": "2.0.15",
        "prettier": "^2.5.1",
        "recursive-readdir": "^2.2.2",
        "rimraf": "5.0.0",
        "typescript": "^4.5.4"
    },
    "type": "module"
}